<UserControl x:Class="GameLibary.Components.Settings.SettingControl_String"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLibary.Components.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="500"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="label" Grid.Column="0" Content="Test" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
        <TextBox x:Name="inp" Grid.Column="2" Background="#FF2C2C2C" BorderBrush="#FF444444" Foreground="White" VerticalContentAlignment="Center" SelectionBrush="#FFFFC500" HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
