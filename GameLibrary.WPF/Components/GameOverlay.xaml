<Window x:Class="GameLibary.Components.GameOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLibary.Components" xmlns:Common="clr-namespace:GameLibary.Components.Common"
        mc:Ignorable="d"
        Title="GameOverlay"
        Height="1080"
        Width="1920"
        AllowsTransparency="True"
        Background="Transparent" 
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        WindowStyle="None">
    <Canvas>   
        <Border Height="40" Width="400" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Common:CommonControl_Button Margin="2" x:Name="btn_Close" Label="X"/>
                <Common:CommonControl_Button Margin="2" Grid.Column="1" x:Name="btn_Refresh" Label="⟳"/>
                <Common:CommonControl_Dropdown Margin="2" Grid.Column="2" x:Name="inp_Process"/>
                <Common:CommonControl_Button Margin="2" Grid.Column="3" x:Name="btn_Capture" Label="Capture"/>
            </Grid>
        </Border>

        <Border x:Name="Higlight" BorderBrush="#FFCCE018" Height="100" Width="200" BorderThickness="5,5,5,5"/>
    </Canvas>
</Window>
