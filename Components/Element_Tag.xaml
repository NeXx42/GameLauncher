<UserControl x:Class="GameLibary.Components.Element_Tag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLibary.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Border x:Name="border" Background="#FF0F141A" BorderBrush="#FF335E90" CornerRadius="5">
        <Border.Effect>
            <DropShadowEffect Direction="0" Opacity="0.5" BlurRadius="24.9"/>
        </Border.Effect>
        <Label x:Name="txt" Content="Test" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="14"/>
    </Border>
</UserControl>
