<UserControl xmlns:Common="clr-namespace:GameLibary.Components.Common"  x:Class="GameLibary.Components.Control_Indexer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLibary.Components" xmlns:indexer="clr-namespace:GameLibary.Components.Indexer"
             mc:Ignorable="d" 
              d:DesignHeight="900" d:DesignWidth="1200">
    <Border Background="{DynamicResource BG_2}" CornerRadius="5,5,0,0">
        <Grid Margin="20">
            <Label Content="Indexer" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="30"/>

            <StackPanel x:Name="cont_FoundGames" Margin="0,100,0,100">
                <indexer:Control_Indexer_Entry/>
            </StackPanel>

            <Border VerticalAlignment="Bottom" Height="60" Background="{DynamicResource BG_3}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Common:CommonControl_Button Margin="5" x:Name="btn_Search" Height="40" Width="200" Label="Search Folder" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Common:CommonControl_Button Margin="5" x:Name="btn_Import" Height="40" Width="200" Label="Import" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
