<UserControl x:Class="GameLibary.Components.Control_Indexer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLibary.Components" xmlns:indexer="clr-namespace:GameLibary.Components.Indexer"
             mc:Ignorable="d" 
              d:DesignHeight="900" d:DesignWidth="1200">
    <Border Background="#070A0D" CornerRadius="5,5,0,0">
        <Grid Margin="20">
            <Label Content="Indexer" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="30"/>

            <StackPanel x:Name="cont_FoundGames" Margin="0,100,0,100">
                <indexer:Control_Indexer_Entry/>
            </StackPanel>

            <Border VerticalAlignment="Bottom" Height="60" Background="#FF424242">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Margin="5" x:Name="btn_Search" Height="40" Width="200" CornerRadius="15" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
                        <TextBlock Text="Search" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                    </Border>

                    <Border Margin="5" x:Name="btn_Import" Height="40" Width="200" CornerRadius="15" HorizontalAlignment="Center" VerticalAlignment="Center" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}">
                        <TextBlock Text="Import" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
