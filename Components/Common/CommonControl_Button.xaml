<UserControl x:Class="GameLibary.Components.Common.CommonControl_Button"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLibary.Components.Common"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Border x:Name="ctrl" CornerRadius="15" Background="{DynamicResource Accent_1}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" Direction="0" Opacity="0.1"/>
        </Border.Effect>
        <Label Content="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
    </Border>
</UserControl>
