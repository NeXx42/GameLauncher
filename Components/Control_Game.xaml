<UserControl x:Class="GameLibary.Components.Control_Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLibary.Components"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800">
    <Border Margin="5" Background="{DynamicResource BG_2}">
        <Grid>
            <Image x:Name="img" Margin="10" VerticalAlignment="Top"/>
            <Border Background="#7F000000" VerticalAlignment="Bottom" Height="50">
                <TextBlock FontSize="18" x:Name="title" Text="Test" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
            </Border>
        </Grid>
    </Border>
</UserControl>
