<Window x:Class="GameLibary.Components.GameOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLibary.Components"
        mc:Ignorable="d"
        Title="GameOverlay" Height="50" Width="140" AllowsTransparency="True" Background="Transparent" Topmost="True" WindowStyle="None">
    <StackPanel Orientation="Horizontal">
        <Button Width="70" x:Name="btn_CaptureGame" Content="Game" Click="btn_CaptureGame_Click"/>
        <Button Width="70" x:Name="btn_CaptureScreen" Content="Screen" Click="btn_CaptureScreen_Click"/>
    </StackPanel>
</Window>
