<UserControl x:Class="GameLibary.Components.Control_CreateTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameLibary.Components"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Border>
        <Grid Margin="25">
            <TextBox x:Name="inp_TagName" Margin="0,0,0,50"/>
            <Button Grid.Column="1" Content="Create" Height="40" VerticalAlignment="Bottom" Click="Button_Click" />
        </Grid>
    </Border>
</UserControl>
