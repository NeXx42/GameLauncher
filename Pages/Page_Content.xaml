<Page x:Class="GameLibary.Pages.Page_Content"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameLibary.Pages" xmlns:components="clr-namespace:GameLibary.Components"
      mc:Ignorable="d" 
      d:DesignHeight="1230" d:DesignWidth="1920"
      Title="Page_Content">

    <Grid>
        <Grid>
            <Grid.Effect>
                <BlurEffect x:Name="effect_blur" Radius="0"/>
            </Grid.Effect>

            <Border VerticalAlignment="Top" Background="#FF31363C" Height="30">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="18" Width="70" Text="Lock" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                    <TextBlock x:Name="nav_Indexer" FontSize="18" Width="70" Text="Index" Foreground="White" VerticalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <Border Margin="0,30,0,25">
                <WrapPanel x:Name="cont_Games" Margin="0,25,0,25" HorizontalAlignment="Center">

                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                </WrapPanel>
            </Border>

            <Border CornerRadius="5" VerticalAlignment="Bottom" Height="130" Margin="10,0,10,80" Background="#FF31363C">
                <WrapPanel x:Name="cont_AllTags" Margin="10,10,10,10">
                </WrapPanel>
            </Border>

            <Border VerticalAlignment="Bottom" Height="50" Margin="10,0,10,10">
                <Grid>
                    <Grid HorizontalAlignment="Left" Width="390">
                        <TextBox x:Name="inp_TagName" Width="250" HorizontalAlignment="Left"/>
                        <Border x:Name="btn_CreateTag" CornerRadius="5" HorizontalAlignment="Right" Width="130" Background="#FF556D84">
                            <Label Content="Create Tag" Foreground="White" HorizontalAlignment="Center" FontSize="23" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    
                    

                    <StackPanel Orientation="Horizontal" Width="270" HorizontalAlignment="Right">
                        <Border x:Name="btn_FirstPage" CornerRadius="5" HorizontalAlignment="Right" Width="50" Background="#FF556D84" Margin="2">
                            <TextBlock Text="&lt;&lt;" Foreground="White" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="btn_PrevPage" CornerRadius="5" HorizontalAlignment="Right" Width="50" Background="#FF556D84" Margin="2">
                            <TextBlock Text="&lt;" Foreground="White" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
                        </Border>

                        <Border  CornerRadius="5" HorizontalAlignment="Right" Width="50" Margin="2">
                            <TextBlock x:Name="lbl_PageNum" Text="5" Foreground="White" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
                        </Border>

                        <Border x:Name="btn_NextPage" CornerRadius="5" HorizontalAlignment="Right" Width="50" Background="#FF556D84" Margin="2">
                            <TextBlock Text=">" Foreground="White" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
                        </Border>
                        <Border x:Name="btn_LastPage" CornerRadius="5" HorizontalAlignment="Right" Width="50" Background="#FF556D84" Margin="2">
                            <TextBlock Text=">>" Foreground="White" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid  x:Name="cont_MenuView" Background="#3F000000" Visibility="Visible" MouseLeftButtonDown="cont_MenuView_MouseLeftButtonDown">
            <components:Control_GameView x:Name="GameViewer" Width="1200" Visibility="Hidden" HorizontalAlignment="Center" Margin="0, 100, 0, 0"/>
            <components:Control_Indexer x:Name="Indexer" Width="1200" Visibility="Hidden" HorizontalAlignment="Center" Margin="0, 100, 0, 0"/>
        </Grid>
    </Grid>
</Page>
