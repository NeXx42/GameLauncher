<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="GameLibrary.Avalonia.Pages.Indexer.Indexer_ImportView"
  xmlns:Common="clr-namespace:GameLibrary.Avalonia.Controls">
  <Grid>
    <Grid x:Name="cont_Import" Margin="20">
      <StackPanel x:Name="cont_FoundGames" Margin="0,100,0,100">
      </StackPanel>
    </Grid>

    <!-- Controls -->

    <Border Background="Black" VerticalAlignment="Bottom">
      <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" x:Name="cont_ImportView_BTNS">
          <Common:Common_Button Margin="5" x:Name="btn_Search" Height="40" Width="200" Label="Search Folder" HorizontalAlignment="Center" VerticalAlignment="Center"/>
          <Common:Common_Button Margin="5" x:Name="btn_Import" Height="40" Width="200" Label="Import" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
      </Grid>

    </Border>
  </Grid>
</UserControl>
