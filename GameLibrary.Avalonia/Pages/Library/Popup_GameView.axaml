          <local:Library_Tag/>
          <local:Library_Tag/>
          <local:Library_Tag/>
          <local:Library_Tag/>
        </WrapPanel>
      </StackPanel>

      <!-- Controls -->
      <StackPanel VerticalAlignment="Bottom" Margin="20">
        <Grid Margin="0, 15, 0, 0" Height="40">
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <common:Common_Button Margin="0,0,5,0" x:Name="btn_Delete" Width="90" Label="ðŸ—‘ Delete"/>
            <common:Common_Button Margin="0,0,5,0" x:Name="btn_Overlay" Width="120" Label="ðŸ§© Open Overlay"/>
            <common:Common_Dropdown Margin="0,0,5,0" x:Name="inp_binary" Width="355"/>
