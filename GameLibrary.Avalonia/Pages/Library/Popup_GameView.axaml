<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="GameLibrary.Avalonia.Pages.Library.Popup_GameView"
  xmlns:common="clr-namespace:GameLibrary.Avalonia.Controls"
  xmlns:local="clr-namespace:GameLibrary.Avalonia.Pages.Library">
  <Border Background="#1E1E1E" CornerRadius="10,10,0,0">
    <Grid>
      <StackPanel>
        <Grid VerticalAlignment="Top" ClipToBounds="True" Height="670">
          <Border CornerRadius="10" Background="Black" />
