            <Border VerticalAlignment="Bottom">
              <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                  <GradientStop Color="Black" Offset="0.616"/>
                  <GradientStop Color="#00000000" Offset="0"/>
                </LinearGradientBrush>
              </Border.Background>
              <Label x:Name="lbl_Title" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#FFFFCC00" FontSize="32" Margin="15" FontWeight="Bold">Game Name</Label>
            </Border>
          </Border>
        </Grid>

