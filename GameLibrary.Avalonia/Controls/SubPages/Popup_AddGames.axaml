<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1200" x:Class="GameLibrary.Avalonia.Controls.SubPage.Popup_AddGames"
  xmlns:Comps="clr-namespace:GameLibrary.Avalonia.Controls.SubPage.Indexer"
  xmlns:Common="clr-namespace:GameLibrary.Avalonia.Controls">
  <Border Background="{DynamicResource bg_BarLight}" CornerRadius="10,10,0,0" BorderBrush="{DynamicResource bg_Border}" BorderThickness="1">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="80"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>

      <Label Grid.Row="0" Content="Indexer" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="30" Margin="20"/>

      <Comps:Indexer_ImportView Grid.Row="1" x:Name="cont_ImportView" />
      <Comps:Indexer_FolderView Grid.Row="1" x:Name="cont_FolderView" />
    </Grid>
  </Border>
</UserControl>
