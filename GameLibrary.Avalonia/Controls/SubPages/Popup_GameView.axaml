<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080" x:Class="GameLibrary.Avalonia.Controls.SubPage.Popup_GameView"
  xmlns:common="clr-namespace:GameLibrary.Avalonia.Controls"
  xmlns:local="clr-namespace:GameLibrary.Avalonia.Controls.Pages.Library">
  <Border Background="{DynamicResource bg_BarLight}" CornerRadius="10,10,0,0" BorderBrush="{DynamicResource bg_Border}" BorderThickness="1">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="670"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="40"/>
      </Grid.RowDefinitions>

      <!-- img -->

      <Grid VerticalAlignment="Top" ClipToBounds="True" Height="670" Grid.Row="0">
        <Border x:Name="img_bg" CornerRadius="10" IsHitTestVisible="True">

          <Grid>
            <Border VerticalAlignment="Bottom" Height="80">
              <Border.Background>
                <LinearGradientBrush EndPoint="0%,0%" StartPoint="0%,100%">
                  <GradientStop Color="Black" Offset="0.5"/>
                  <GradientStop Color="#00000000" Offset="1.0"/>
                </LinearGradientBrush>
              </Border.Background>

              <Label x:Name="lbl_Title" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#FFFFCC00" FontSize="32" Margin="15" FontWeight="Bold" IsHitTestVisible="True">Game Name</Label>
            </Border>
          </Grid>
        </Border>
      </Grid>

      <!-- tab group -->
      <Grid Grid.Row="1" Margin="20">
        <Grid.RowDefinitions>
          <RowDefinition Height="30"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Spacing="2">
          <Border x:Name="btn_tab_Tags" Background="#ff161617" CornerRadius="5, 0, 0, 0">
            <Label Content="Tags" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15, 0"/>
          </Border>
          <Border x:Name="btn_tab_Options" Background="#ff404040">
            <Label Content="Launch Settings" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15, 0"/>
          </Border>
          <Border x:Name="btn_tab_Logs" Background="#ff404040" CornerRadius="0, 5, 0, 0">
            <Label Content="Logs" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="15, 0"/>
          </Border>
        </StackPanel>

        <Border CornerRadius="0, 5, 5, 5" Background="#121212" Grid.Row="1">
          <Grid Margin="15">

            <!-- TAGS -->
            <Grid x:Name="tab_Tags" IsVisible="False">
              <WrapPanel Orientation="Horizontal" x:Name="cont_AllTags" VerticalAlignment="Top">
                <local:Library_Tag/>
              </WrapPanel>
            </Grid>

            <!-- Options -->
            <Grid x:Name="tab_Settings" IsVisible="True">
              <ScrollViewer>
                <StackPanel Orientation="Vertical">

                  <Grid ColumnDefinitions="150, *">
                    <Label Content="Capture Logs" VerticalAlignment="Center"/>
                    <common:Common_Toggle x:Name="inp_CaptureLogs" Grid.Column="1"/>
                  </Grid>

                  <Grid ColumnDefinitions="150, *">
                    <Label Content="Locale Emulation" VerticalAlignment="Center"/>
                    <common:Common_Toggle x:Name="inp_Emulate" Grid.Column="1"/>
                  </Grid>

                  <Grid ColumnDefinitions="150, *">
                    <Label Content="Runner" VerticalAlignment="Center"/>
                    <common:Common_Dropdown x:Name="inp_WineProfile" Width="200" HorizontalAlignment="Left" Grid.Column="1"/>
                  </Grid>

                </StackPanel>
              </ScrollViewer>
            </Grid>

            <!-- Logs -->
            <Grid x:Name="tab_Logs" IsVisible="True" VerticalAlignment="Stretch">
              <ScrollViewer>
                <TextBlock x:Name="lbl_Logs" Text="YO"/>
              </ScrollViewer>
              <common:Common_Button x:Name="btn_RefreshLogs" VerticalAlignment="Top" HorizontalAlignment="Right" Label="ðŸ”ƒ" Height="30" Width="30"/>
            </Grid>


          </Grid>
        </Border>
      </Grid>

      <!-- Controls -->
      <StackPanel VerticalAlignment="Bottom" Margin="20, 0, 20, 20" Grid.Row="2">

        <Grid>
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <common:Common_Button Margin="0,0,5,0" x:Name="btn_Delete" Width="90" Label="ðŸ—‘ Delete"/>
            <common:Common_Button Margin="0,0,5,0" x:Name="btn_Overlay" Width="150" Label="ðŸ§© Open Overlay"/>
            <common:Common_Dropdown Margin="0,0,5,0" x:Name="inp_binary" Width="355"/>
            <common:Common_Button Margin="0,0,5,0" x:Name="btn_Browse" Width="150" Label="ðŸ“ Browse"/>
          </StackPanel>

          <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <common:Common_Button x:Name="btn_Launch" Width="150" Label="â–¶ Launch"/>
          </StackPanel>
        </Grid>
      </StackPanel>

    </Grid>
  </Border>
</UserControl>
