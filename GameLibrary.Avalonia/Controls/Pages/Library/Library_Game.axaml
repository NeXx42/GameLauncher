<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="GameLibrary.Avalonia.Controls.Pages.Library.Library_Game">
    <Grid>
        <Border Margin="5" CornerRadius="10" Background="Black" BoxShadow="0 0 5 0 black"/>
        <Border Margin="10" CornerRadius="5" x:Name="img" ClipToBounds="True" Background="#24242425">
            <Grid>
                <Border VerticalAlignment="Bottom" Height="50" CornerRadius="0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0%,0%" StartPoint="0%,100%">
                            <GradientStop Color="Black" Offset="0.3"/>
                            <GradientStop Color="#00000000" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock FontSize="18" x:Name="title" Text="Test" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
