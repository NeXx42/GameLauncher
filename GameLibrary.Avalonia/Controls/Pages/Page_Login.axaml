<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="GameLibrary.Avalonia.Controls.Pages.Page_Login"
  xmlns:common="clr-namespace:GameLibrary.Avalonia.Controls">
  <Border VerticalAlignment="Center" HorizontalAlignment="Center" Width="700" Height="150" Background="#1E1E1E" CornerRadius="5">
    <Grid Margin="15">
      <Label Content="Login" VerticalAlignment="Top" HorizontalAlignment="Center" Height="40" FontSize="20"/>

      <Grid VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="inp_Password" PasswordChar="*"/>
        <common:Common_Button x:Name="btn_Login" Margin="10, 0, 0, 0" Grid.Column="1" Label="Login"/>
      </Grid>
    </Grid>
  </Border>
</UserControl>
