<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080" x:Class="GameLibrary.Avalonia.Controls.Modals.Modal_Settings_Runner"
  xmlns:Controls="clr-namespace:GameLibrary.Avalonia.Controls">
  <Border VerticalAlignment="Center" HorizontalAlignment="Center" Width="500" Height="400" Background="{DynamicResource bg_BarLight}" CornerRadius="5" ClipToBounds="True">
    <Grid RowDefinitions="Auto, *, 50">

      <StackPanel Background="{DynamicResource bg_BackgroundDarker}" VerticalAlignment="Top" Height="30" Orientation="Horizontal" Spacing="1" x:Name="TabGroup_Buttons">
        <Border Background="{DynamicResource bg_Border}" Width="100">
          <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="General"/>
        </Border>
        <Border Background="{DynamicResource bg_Border}" Width="100">
          <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="Wine"/>
        </Border>
        <Border Background="{DynamicResource bg_Border}" Width="100">
          <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="xxx"/>
        </Border>
        <Border Background="{DynamicResource bg_Border}" Width="100">
          <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="xxx"/>
        </Border>
      </StackPanel>

      <ScrollViewer Grid.Row="1">
        <Grid Margin="15" x:Name="TabGroup_Content">

          <!--  GENERAL  -->
          <StackPanel Spacing="5">
            <Grid ColumnDefinitions="100, *" Height="30">
              <Label Content="Name" />
              <TextBox Grid.Column="1" x:Name="inp_Name"/>
            </Grid>

            <Grid ColumnDefinitions="100, *" Height="30">
              <Label Content="Root" />
              <Controls:Common_Button Grid.Column="1" x:Name="btn_Dir" HorizontalAlignment="Stretch" Label="Set Directory"/>
            </Grid>

            <Border Height="10"/>

            <Grid ColumnDefinitions="100, *" Height="30">
              <Label Content="Type" />
              <Controls:Common_Dropdown Grid.Column="1" x:Name="inp_Type" HorizontalAlignment="Stretch" />
            </Grid>

            <Grid ColumnDefinitions="100, *" Height="30" x:Name="group_Version">
              <Label Content="Version" />
              <Controls:Common_Dropdown Grid.Column="1" x:Name="inp_Version" HorizontalAlignment="Stretch" />
            </Grid>

          </StackPanel>

          <!--  GENERAL  -->
          <StackPanel Spacing="5">
            <Grid ColumnDefinitions="100, *" Height="30">
              <Label Content="Wine Tricks" />
              <Controls:Common_Button Grid.Column="1" x:Name="btn_WineTricks" HorizontalAlignment="Stretch" Label="Wine Tricks"/>
            </Grid>
          </StackPanel>

        </Grid>
      </ScrollViewer>

      <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="5" HorizontalAlignment="Right" Margin="10">
        <Controls:Common_Button Width="100" Label="Close" x:Name="btn_Close"/>
        <Controls:Common_Button Width="100" Label="Save" x:Name="btn_Save" />
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
