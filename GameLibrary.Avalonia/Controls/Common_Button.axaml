<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="GameLibrary.Avalonia.Controls.Common_Button"
    xmlns:local="clr-namespace:GameLibrary.Avalonia.Controls" x:DataType="local:Common_Button">
    <Border x:Name="ctrl" CornerRadius="2" Background="#2C2C2C" BorderBrush="#FF444444" BorderThickness="1">
        <TextBlock Text="{Binding Label, Mode=OneWay}" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
    </Border>
</UserControl>
