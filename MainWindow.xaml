<Window xmlns:Common="clr-namespace:GameLibary.Components.Common"  x:Class="GameLibary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLibary" xmlns:components="clr-namespace:GameLibary.Components"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid Background="{DynamicResource BG_1}">
        <Frame x:Name="MainPage" NavigationUIVisibility="Hidden" JournalOwnership="OwnsJournal"/>

        <Border x:Name="Banner_ActiveGame" Background="{DynamicResource Accent_3}" VerticalAlignment="Top" Height="50" Width="500" HorizontalAlignment="Center" Visibility="Visible">
            <Grid>
                <Label x:Name="Banner_Text" Content="Playing - " Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <Common:CommonControl_Button x:Name="btn_Banner_Detach" Label="Detach"  Width="100" Height="35" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
