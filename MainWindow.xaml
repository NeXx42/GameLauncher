<Window x:Class="GameLibary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameLibary" xmlns:components="clr-namespace:GameLibary.Components"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid Background="#FF0F141A">
        <Grid>
            <Grid.Effect>
                <BlurEffect x:Name="effect_blur" Radius="0"/>
            </Grid.Effect>
            
            <Label x:Name="lbl_GamePos" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,0,0,0" FontSize="30">Games - 25</Label>
            <StackPanel x:Name="cont_TagSearch" VerticalAlignment="Top" Margin="250,10,0,0" Height="40" Orientation="Horizontal">
                <Button BorderBrush="{x:Null}" Foreground="White" Background="#FFF9700F" Width="150" Height="30">Triple A</Button>
            </StackPanel>
            
            <Border Margin="0,25,0,25">
                <WrapPanel x:Name="cont_Games" Margin="0,25,0,25" HorizontalAlignment="Center">

                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                    <components:Control_Game Margin="0,0,2,0" Width="370" Height="227.85" />
                </WrapPanel>
            </Border>

            <Border  VerticalAlignment="Bottom" Height="100" Margin="25,0,25,25" Background="#FF31363C">
                <Grid>
                    <WrapPanel x:Name="cont_AllTags" Margin="70,10,130,10">
                    </WrapPanel>
                    <Button x:Name="btn_CreateTag" HorizontalAlignment="Left" Margin="10,10,10,10" Width="50" Content="NEW" Click="btn_CreateTag_Click"/>
                    <Button x:Name="btn_NextPage" HorizontalAlignment="Right" Margin="0,10,10,10" Width="50" Content=">" Click="btn_NextPage_Click"/>
                    <Button x:Name="btn_PrevPage" HorizontalAlignment="Right" Margin="0,10,70,10" Width="50" Content="&lt;" Click="btn_PrevPage_Click"/>
                </Grid>

            </Border>
        </Grid>

        <Grid  x:Name="cont_MenuView" Background="#3F000000" Visibility="Visible" MouseLeftButtonDown="cont_MenuView_MouseLeftButtonDown">
            <components:Control_GameView x:Name="GameViewer" Width="1200" Visibility="Visible" HorizontalAlignment="Center" Margin="0, 100, 0, 0"/>
            <components:Control_CreateTag x:Name="TagCreator" Width="500" Height="150" Visibility="Hidden" />
            <components:Control_Setup Width="600" Height="300" x:Name="SetupHandler" Visibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
