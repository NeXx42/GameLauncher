<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="GameLibrary.AvaloniaUI.Controls.SubPage.Popup_TagManager"
  xmlns:common="clr-namespace:GameLibrary.AvaloniaUI.Controls">
  <Border Background="#0a0e13" CornerRadius="10,10,0,0" BorderBrush="{DynamicResource bg_Border}" BorderThickness="1">
    <Grid RowDefinitions="*, 60">
      <StackPanel Spacing="15" Margin="15">
        <Label Content="Managed Tags" HorizontalAlignment="Center" FontSize="18"/>
        <WrapPanel x:Name="cont_ManagedTags" HorizontalAlignment="Center" ItemSpacing="5" LineSpacing="5"/>

        <Label Content="Unmanaged Tags" HorizontalAlignment="Center" FontSize="18"/>
        <WrapPanel x:Name="cont_UnmanagedTags" HorizontalAlignment="Center" ItemSpacing="5" LineSpacing="5"/>
      </StackPanel>


      <Border Grid.Row="1" BorderThickness="0 1 0 0" BorderBrush="{DynamicResource bg_Border}">
        <Grid Margin="15">
          <common:Common_Button Label="Delete" Width="150" Classes="negative" HorizontalAlignment="Left" x:Name="btn_Delete"/>
          <common:Common_Button Label="Edit" Width="150" HorizontalAlignment="Right" x:Name="btn_Edit"/>
        </Grid>
      </Border>
    </Grid>
  </Border>
</UserControl>
