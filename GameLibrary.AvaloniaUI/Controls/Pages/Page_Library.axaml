<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080" x:Class="GameLibrary.AvaloniaUI.Controls.Pages.Page_Library"
    xmlns:common="clr-namespace:GameLibrary.AvaloniaUI.Controls"
    xmlns:components="clr-namespace:GameLibrary.AvaloniaUI.Controls.SubPage">


    <Grid Background="Black">
        <Border x:Name="eff_Blur">
            <Grid>
                <StackPanel Spacing="5">
                    <Grid VerticalAlignment="Top" Height="60" Margin="0 5 0 0">
                        <Label Margin="20, 0, 0, 0" FontSize="30" Content="Games" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="300"/>
                        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Right">
                            <common:Common_Button Label="Edit Tags" x:Name="btn_Tags" HorizontalAlignment="Center" Width="100" Margin="0,0,10,0"/>
                            <common:Common_Button Label="Add Games" x:Name="btn_Indexer" HorizontalAlignment="Center" Width="100" Margin="0,0,10,0"/>
                            <common:Common_Button Label="Settings" x:Name="btn_Settings" HorizontalAlignment="Center" Width="100" Margin="0,0,10,0"/>
                        </StackPanel>
                    </Grid>

                    <Border VerticalAlignment="Top" Background="#0e1419" BorderBrush="#1e2328" BorderThickness="1" CornerRadius="0" BoxShadow="0 0 10 0 #000000">
                        <Grid ColumnDefinitions="*, Auto" Margin="15">

                            <!-- Tags -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" Spacing="10">
                                <Label Content="Tags:" VerticalAlignment="Center" Foreground="#FFAFAFAF"/>
                                <WrapPanel x:Name="cont_AllTags" Orientation="Horizontal" VerticalAlignment="Center" ItemSpacing="5" LineSpacing="5"/>
                            </StackPanel>

                            <!-- Sort -->
                            <StackPanel HorizontalAlignment="Right" Grid.Column="1" Orientation="Horizontal" Spacing="15">
                                <Label Content="Sort:" Foreground="#FFAFAFAF" VerticalAlignment="Center"/>
                                <StackPanel x:Name="inp_SortTypes" Orientation="Horizontal" Spacing="10" />
                                <common:Common_Button x:Name="btn_SortDir" Margin="0, 0, 0, 0" Label="Ascending" Width="100"/>

                                <common:Common_Dropdown x:Name="inp_SortType" Width="100" IsVisible="False"/>
                                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="5" IsVisible="False">
                                    <Label Content="Search" VerticalAlignment="Center"/>
                                    <TextBox x:Name="inp_Search" Width="300"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Games -->

                    <WrapPanel x:Name="cont_Games" HorizontalAlignment="Center" ItemSpacing="15" LineSpacing="15" Margin="0 10 0 0" />
                </StackPanel>

                <!-- Controls -->

                <Border VerticalAlignment="Bottom" Height="40" Margin="10,0,10,10">
                    <StackPanel Orientation="Horizontal" Width="270" HorizontalAlignment="Right">

                        <common:Common_Button Margin="0, 0, 5, 0" x:Name="btn_FirstPage" Label="&lt;&lt;" HorizontalAlignment="Right" Width="50"/>
                        <common:Common_Button Margin="0, 0, 5, 0" x:Name="btn_PrevPage" Label="&lt;" HorizontalAlignment="Right" Width="50"/>

                        <Border CornerRadius="5" HorizontalAlignment="Right" Width="50" Margin="2">
                            <TextBlock x:Name="lbl_PageNum" Text="5" Foreground="White" HorizontalAlignment="Center" FontSize="30" VerticalAlignment="Center"/>
                        </Border>

                        <common:Common_Button Margin="0, 0, 5, 0" x:Name="btn_NextPage" Label=">" HorizontalAlignment="Right" Width="50"/>
                        <common:Common_Button Margin="0, 0, 5, 0" x:Name="btn_LastPage" Label=">>" HorizontalAlignment="Right" Width="50"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid x:Name="cont_MenuView" Background="#7F000000">
            <components:Popup_GameView x:Name="GameViewer" Width="1200" IsVisible="False" HorizontalAlignment="Center" Margin="0, 100, 0, 0"/>
            <components:Popup_AddGames x:Name="Indexer" Width="1200" IsVisible="False" HorizontalAlignment="Center" Margin="0, 100, 0, 0"/>
            <components:Popup_Settings x:Name="Settings" Width="1200" IsVisible="False" HorizontalAlignment="Center" Margin="0, 100, 0, 0"/>
        </Grid>
    </Grid>
</UserControl>
