<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="290" d:DesignHeight="257" x:Class="GameLibrary.AvaloniaUI.Controls.Pages.Library.Library_Game"
    xmlns:Tag="clr-namespace:GameLibrary.AvaloniaUI.Controls.Pages.Library" Background="Transparent" ClipToBounds="False">

    <Border BorderThickness="2" Background="#0f1419" CornerRadius="10" BoxShadow="0 0 5 0 black" x:Name="ctrl">
        <Border.Styles>
            <Style Selector="Border#ctrl">
                <Setter Property="RenderTransform" Value="translateY(0px)"/>
                <Setter Property="BorderBrush" Value="#1b1f24"/>
            </Style>
            <Style Selector="Border#ctrl.hovered">
                <Setter Property="RenderTransform" Value="translateY(-5px)"/>
                <Setter Property="BorderBrush" Value="#67c1f5"/>
            </Style>
        </Border.Styles>
        <Border.Transitions>
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Border.Transitions>


        <Grid RowDefinitions="163, *">
            <Border CornerRadius="10 10 0 0" x:Name="img" ClipToBounds="True" Background="red">
                <Grid>
                    <TextBlock x:Name="lbl_NoIcon" Text="GAME" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10" TextWrapping="Wrap"/>

                    <Border VerticalAlignment="Bottom" Height="50" CornerRadius="0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0%,0%" StartPoint="0%,100%">
                                <GradientStop Color="#45000000" Offset="0"/>
                                <GradientStop Color="#00000000" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>
            <StackPanel Grid.Row="1" Margin="10" Spacing="5">
                <TextBlock FontSize="15" x:Name="title" Text="Test" Foreground="White" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" Height="20" x:Name="cont_tags" Spacing="5">
                    <Tag:Library_TagUnselectable x:Name="tag_1"/>
                    <Tag:Library_TagUnselectable x:Name="tag_2"/>
                    <Tag:Library_TagUnselectable x:Name="tag_3"/>
                </StackPanel>

                <Grid >
                    <Label Content="1min" HorizontalAlignment="Left" Foreground="#66707b" FontSize="11" x:Name="lbl_TimePlayed"/>
                    <Label Content="Never" HorizontalAlignment="Right" Foreground="#66707b" FontSize="11" FontStyle="Italic" x:Name="lbl_LastPlayed"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
