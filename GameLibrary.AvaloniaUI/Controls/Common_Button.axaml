<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Class="GameLibrary.AvaloniaUI.Controls.Common_Button"
    xmlns:local="clr-namespace:GameLibrary.AvaloniaUI.Controls" x:DataType="local:Common_Button">
    <Border x:Name="ctrl" CornerRadius="2" Background="{DynamicResource btn_Background}" BorderBrush="{DynamicResource btn_Border}" BorderThickness="1">
        <TextBlock Margin="5,0" Text="{Binding Label, Mode=OneWay}" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
    </Border>
</UserControl>
