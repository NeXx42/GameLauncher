<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="GameLibrary.AvaloniaUI.Controls.SubPage.Indexer.Indexer_ImportView"
  xmlns:Common="clr-namespace:GameLibrary.AvaloniaUI.Controls">
  <Grid>
    <Grid x:Name="cont_Import" Margin="20">
      <StackPanel x:Name="cont_FoundGames" Margin="0,100,0,100">
      </StackPanel>
    </Grid>

    <!-- Controls -->

    <Border Background="Black" VerticalAlignment="Bottom">
      <Grid Margin="10">
        <StackPanel Orientation="Horizontal" x:Name="cont_ImportView_BTNS" HorizontalAlignment="Left" Spacing="5">
          <Common:Common_Button x:Name="btn_Search" Height="30" Width="150" Label="Search Folder" HorizontalAlignment="Center" VerticalAlignment="Center"/>
          <Common:Common_Button x:Name="btn_SelectFolder" Height="30" Width="150" Label="Add Folder" HorizontalAlignment="Center" VerticalAlignment="Center"/>
          <Common:Common_Button x:Name="btn_SelectFile" Height="30" Width="150" Label="Add File" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Spacing="5">
          <Common:Common_Dropdown x:Name="inp_Library" Width="150"/>
          <Common:Common_Button x:Name="btn_Import" Height="30" Width="150" Label="Import" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
      </Grid>

    </Border>
  </Grid>
</UserControl>
