<UserControl x:Class="GameLibrary.AvaloniaUI.Controls.SubPage.Popup_Settings"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="450" d:DesignWidth="800" mc:Ignorable="d">
  <Border Background="{DynamicResource bg_BarLight}" CornerRadius="10,10,0,0" BorderBrush="{DynamicResource bg_Border}" BorderThickness="1">
    <Grid ColumnDefinitions="Auto, *">
      <StackPanel x:Name="tabs" Grid.Column="0" Margin="15" Width="200" Spacing="5"/>
      <Border Margin="15" Background="{DynamicResource bg_BackgroundDarker}" Grid.Column="1" CornerRadius="5">
        <ScrollViewer>
          <Grid x:Name="content">

          </Grid>
        </ScrollViewer>
      </Border>
    </Grid>
  </Border>
</UserControl>