<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" x:Class="GameLibrary.AvaloniaUI.Controls.Settings.Control_Settings_Runners"
  xmlns:Controls="clr-namespace:GameLibrary.AvaloniaUI.Controls">
  <Border CornerRadius="5" Background="#ff3b3b3b">
    <Grid Margin="5">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="40"/>

      </Grid.RowDefinitions>

      <StackPanel x:Name="container">

      </StackPanel>

      <Grid Grid.Row="1" Height="30" Margin="0,10,0,0">
        <Controls:Common_Button x:Name="btn_Remove" Width="150" Label="Delete" HorizontalAlignment="Left"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
          <Controls:Common_Button x:Name="btn_Default" Width="150" Label="Make Default" Margin="0, 0, 5, 0"/>
          <Controls:Common_Button x:Name="btn_Add" Width="150" Label="Add"/>
        </StackPanel>
      </Grid>
    </Grid>
  </Border>
</UserControl>
